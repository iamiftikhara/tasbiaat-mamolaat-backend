{
    "project": "Tasbiaat & Mamolaat Web App - Frontend",
    "framework": "Next.js (JavaScript, no TypeScript)",
    "design_principles": {
      "responsive": true,
      "role_based_views": true,
      "bilingual_support": "Urdu + English",
      "secure_api_calls": true,
      "ui_style": {
        "theme": "Clean, card-based design",
        "colors": {
          "primary": "#2C3E50",
          "secondary": "#18BC9C",
          "danger": "#E74C3C",
          "success": "#2ECC71",
          "warning": "#F39C12",
          "info": "#3498DB"
        },
        "fonts": {
          "urdu": "Noto Nastaliq Urdu, serif",
          "english": "Inter, sans-serif"
        }
      }
    },
    "roles_and_views": {
      "Saalik": [
        "Daily Tasbiaat & Mamolaat entry form (conditional by level)",
        "History of previous entries (list + calendar view)",
        "Level progress tracker"
      ],
      "Murabi": [
        "Review Saalik submissions (list + filter)",
        "Add comments to entries",
        "Approve/reject and update Saalik level"
      ],
      "Masool": [
        "Weekly aggregated summaries (charts/tables)",
        "Export weekly reports"
      ],
      "Sheikh": [
        "Monthly aggregated reports (charts + filters)",
        "Filter by region, level, progress",
        "Export monthly reports"
      ],
      "Admin": [
        "User management dashboard",
        "Assign roles & regions",
        "System settings and logs"
      ]
    },
    "ui_structure": {
      "pages": [
        "/login",
        "/dashboard (role-based redirect)",
        "/dashboard/saalik",
        "/dashboard/murabi",
        "/dashboard/masool",
        "/dashboard/sheikh",
        "/dashboard/admin",
        "/profile",
        "/settings"
      ],
      "components": [
        "Layout (header, sidebar, footer)",
        "RoleGuard (for role-based route protection)",
        "SaalikForm (dynamic form fetched from /levels)",
        "EntryHistory (list + calendar toggle)",
        "ProgressTracker (per level)",
        "ReportTable",
        "ReportFilters",
        "NotificationBell",
        "AuthContext (JWT + systemKey management)"
      ]
    },
